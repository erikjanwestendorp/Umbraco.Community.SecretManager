{
  "$schema": "appsettings-schema.json",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console"
            }
          ]
        }
      }
    ]
  },
  "Umbraco": {
    "CMS": {
      "Content": {
        "MacroErrors": "Throw"
      },
      "Hosting": {
        "Debug": true
      }
    }
  },
  "SecretManager": {
    "Recurring": {
      "FirstRun": "11 20 * * *"
    },
    "UIBuilder": {
      "DateTimeFormat": "MMMM d, yyyy",
      "Culture": "en-US"
    }
  }
}
